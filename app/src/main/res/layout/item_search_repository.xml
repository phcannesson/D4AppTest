<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textview_itemsearch_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Title"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>

    <ImageView
            android:id="@+id/imageview_itemsearch_author"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textview_itemsearch_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@string/imageview_searchitem_content_description"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/textview_itemsearch_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_itemsearch_title"
            app:layout_constraintBottom_toBottomOf="@id/imageview_itemsearch_author"
            app:layout_constraintLeft_toRightOf="@id/imageview_itemsearch_author"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="desc"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/textview_itemsearch_stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageview_itemsearch_author"
            tools:text="13"
            app:layout_constraintStart_toEndOf="@id/imageview_itemsearch_stars"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/imageview_itemsearch_stars"/>

    <ImageView
            android:id="@+id/imageview_itemsearch_stars"
            app:layout_constraintTop_toBottomOf="@id/imageview_itemsearch_author"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_big_off"
            android:contentDescription="@string/imageview_searchitem_stars_description"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>