<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".githubsearch.GithubSearchFragment">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_search"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/github_search_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
            android:id="@+id/radiogroup_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textinputlayout_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:checkedButton="@id/radiobutton_search_android"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_search"
            android:layout_marginBottom="8dp">

        <RadioButton
                android:id="@+id/radiobutton_search_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/android_radio_text"/>

        <RadioButton
                android:id="@+id/radiobutton_search_ios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ios_radio_text"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_search"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/textview_search_emptyresult"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/search_emptyresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:visibility="gone"
            android:id="@+id/loading_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>